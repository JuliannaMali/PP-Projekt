@page
@model Map1Model
@{
    ViewData["Title"] = "Gra - Poziom 2";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0" />
    <title>Średnia Gra - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/MapView.css"
          asp-append-version="true" />
</head>

<div id="mapa1">

    @for (int i = Model._mapa.SizeY - 1; i >= 0; i--)
    {
        double mnoz = i * 17 - 170;
        var actualmnoz = mnoz.ToString("0.0", System.Globalization.CultureInfo.InvariantCulture);

        @if (i != Model._mapa.SizeY - 1 && i % 2 == 0)
        {
            <div id="rows" style="position:relative; top:@(actualmnoz)px;">
                @for (int j = 0; j < Model._mapa.SizeX; j++)
                {
                    <div id="@j">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100">
                            <defs>
                                <clipPath id="clipPolygon3">
                                    <polygon points="49.9,4.4     100,28.375   100,73.15  49.9,97.125  0,73.15  0,28.375" />
                                </clipPath>
                            </defs>

                            <polygon points="49.9,1.4   100,28.375  100,73.15   49.9,100.125  0,73.15  0,28.375" id="obramowka" />

                            @*
                <image href="/Images/hexagon-long-diagonals.png" width="auto" height="10vh" x="7%" y="3%" clip-path="url(#clipPolygon3)" />

                *@
                        </svg>

                    </div>
                }
            </div>
        }
        else
        {
            <div id="rows" style="position: relative; left:1.75vw; top:calc(@(actualmnoz)px)">
                @for (int j = 0; j < Model._mapa.SizeX; j++)
                {
                    <div id="@j">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100">
                            <defs>
                                <clipPath id="clipPolygon3">
                                    <polygon points="49.9,4.4     100,28.375   100,73.15  49.9,97.125  0,73.15  0,28.375" id="hex" fill="blue" />
                                </clipPath>
                            </defs>

                            <polygon points="49.9,1.4   100,28.375  100,73.15   49.9,100.125  0,73.15  0,28.375" id="obramowka" />

                            @*

                <image href="/Images/rabit.png" width="auto" height="10vh" x="7%" y="3%" clip-path="url(#clipPolygon3)" />

                *@
                        </svg>

                    </div>
                }
            </div>
        }
    }

</div>

